<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.EmployeeController">
    <children>
        <Label text="Aplikasi Pendataan Karyawan">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </Label>

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="300.0" prefWidth="400.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
            <children>
                <Label text="NIP:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nipField" promptText="Masukkan NIP" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Nama:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="namaField" promptText="Masukkan nama karyawan" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Jabatan:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="jabatanField" promptText="Masukkan jabatan" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Alamat:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextArea fx:id="alamatField" prefRowCount="3" promptText="Masukkan alamat" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="emailField" promptText="Masukkan email" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="No. Telpon:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="noTelponField" promptText="Masukkan nomor telepon" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </children>
            <VBox.margin>
                <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </GridPane>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Simpan" />
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdate" prefWidth="100.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Update" />
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Hapus" />
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear" prefWidth="100.0" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Bersihkan" />
            </children>
            <VBox.margin>
                <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </HBox>

        <Separator />

        <Label text="Data Karyawan">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </Label>

        <TableView fx:id="employeeTable" prefHeight="300.0">
            <columns>
                <TableColumn fx:id="noColumn" prefWidth="50.0" text="No" />
                <TableColumn fx:id="nipColumn" prefWidth="100.0" text="NIP" />
                <TableColumn fx:id="namaColumn" prefWidth="150.0" text="Nama Karyawan" />
                <TableColumn fx:id="jabatanColumn" prefWidth="120.0" text="Jabatan" />
                <TableColumn fx:id="alamatColumn" prefWidth="200.0" text="Alamat" />
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
                <TableColumn fx:id="noTelponColumn" prefWidth="120.0" text="No. Telpon" />
            </columns>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </TableView>
    </children>
</VBox>